      "product-summary-name#desktop__product-list-two--name"
    ]
  },

  "product-summary-image#desktop__product-list-two--image": {
    "props": {
      "showBadge": false,
      "height": 220
    }
  },
  "product-summary-price#desktop__product-list-two--price": {
    "props": {
      "showInstallments": true,
      "showLabels": false
    }
  },
  "product-summary-name#desktop__product-list-two--name":{},

//   PROPS SLIDER DE PRODUCTOS

  "slider-layout#desktop__product-list-two": {
    "props": {
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 3,
        "phone": 1
      },
      "infinite": true,
